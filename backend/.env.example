# Backend Environment Variables
# Copy this file to .env and fill in your actual values

# Server Configuration
PORT=5000
NODE_ENV=development
CORS_ORIGIN=http://localhost:5001

# Database Configuration
DATABASE_URL=sqlite:./data/database.sqlite

# Security & Authentication (CHANGE THESE IN PRODUCTION!)
JWT_SECRET=change-this-super-secret-jwt-key-in-production
BCRYPT_ROUNDS=8
TOKEN_EXPIRY=30d

# AI Service API Keys
OPENAI_API_KEY=sk-proj-your-openai-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here
GOOGLE_API_KEY=your-google-api-key-here
DEEPAI_API_KEY=your-deepai-key-here
X_API_KEY=your-x-ai-key-here

# Image AI Service Keys
IMAGEMAGIC_API_KEY=your-imagemagic-key-here
STABILITY_API_KEY=sk-your-stability-ai-key-here

# Search API Keys
SERPER_API_KEY=your-serper-key-here
SERPAPI_API_KEY=your-serpapi-key-here

# Azure OpenAI (Optional)
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_KEY=your-azure-openai-key
AZURE_OPENAI_VERSION=2023-12-01-preview

# Application Settings
MAX_FILE_SIZE=10MB
FREE_USER_LIMIT=5
RATE_LIMIT_WINDOW=86400000

# Feature Flags
ENABLE_GOOGLE_AUTH=true
ENABLE_IMAGE_UPLOAD=true
ENABLE_VOICE_INPUT=true
ENABLE_PREMIUM=true
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_ENDPOINT=
